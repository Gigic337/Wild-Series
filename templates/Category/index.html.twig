{% extends 'base.html.twig' %}

{% block title %}All categories{% endblock %}

{% block body %}
    <h1>Toutes les catégories disponibles : </h1>
    {% for category in categories %}
        <a>

            {# Lien vers la fiche de la catégorie : #}
            <h2><a href="{{ path("category_show", { categoryName: category.name }) }}">{{ category.name }}</h2></a>
        </div>

    {% else %}
        Aucune catégorie trouvée.
    {% endfor %}

    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}